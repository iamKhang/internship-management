@model InternshipManagement.Models.SinhVien
@{
    ViewData["Title"] = "Thêm Sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Sinh viên</h2>

<form asp-action="Create" method="post" class="vstack gap-3">
    @Html.AntiForgeryToken()

    <div>
        <label class="form-label">Khoa</label>
        <select class="form-select" asp-for="MaKhoa" asp-items="ViewBag.KhoaOptions">
            <option value="">-- Chọn khoa --</option>
        </select>
        <span class="text-danger" asp-validation-for="MaKhoa"></span>
    </div>

    <div>
        <label class="form-label">Họ tên</label>
        <input class="form-control" asp-for="HoTenSv" />
        <span class="text-danger" asp-validation-for="HoTenSv"></span>
    </div>

    <div>
        <label class="form-label">Năm sinh</label>
        <input class="form-control" asp-for="NamSinh" type="number" />
        <span class="text-danger" asp-validation-for="NamSinh"></span>
    </div>

    <div>
        <label class="form-label">Quê quán</label>
        <input class="form-control" asp-for="QueQuan" />
        <span class="text-danger" asp-validation-for="QueQuan"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary-main" type="submit">Lưu</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Huỷ</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
